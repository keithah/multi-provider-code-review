{
  "name": "multi-provider-code-review",
  "version": "2.0.0",
  "description": "Best-in-class multi-provider code review GitHub Action with hybrid AST + LLM analysis.",
  "main": "dist/index.js",
  "type": "commonjs",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --sourcemap",
    "build:prod": "npm run build -- --minify",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keithah/multi-provider-code-review.git"
  },
  "keywords": [
    "github-action",
    "code-review",
    "llm",
    "ast",
    "multi-provider"
  ],
  "author": "Keith Herrington",
  "bugs": {
    "url": "https://github.com/keithah/multi-provider-code-review/issues"
  },
  "homepage": "https://github.com/keithah/multi-provider-code-review#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@actions/cache": "^4.0.1",
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@octokit/rest": "^20.1.2",
    "js-yaml": "^4.1.1",
    "p-queue": "^8.1.1",
    "p-retry": "^6.2.1",
    "tree-sitter": "^0.21.1",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.19.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "tree-sitter-go": "^0.21.0",
    "tree-sitter-rust": "^0.21.0"
  }
}
